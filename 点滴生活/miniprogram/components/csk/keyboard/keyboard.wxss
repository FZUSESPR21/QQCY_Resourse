  position: relative;
  background: #F4F2F2 100%;
  height: 110rpx;
}
.textnormal{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background: white;
  width: 90%;
  margin: auto;
  height: 80%;
  text-align: center;
  border-radius: 35rpx;
  box-shadow: 0.9rpx 0.7rpx 0.8rpx #D8D6D6 100%;
}

