}
.normal1 , .normal2 , .normal0{
  display: flex;
  align-items: center;
  justify-content: center;
  border: white;
  line-height: 50rpx;
  margin: .5rpx;
  float: left;
  color: gray;
  font-size: 32rpx;
  font-weight: 400;
  width: 27%;
  height: 110rpx;
  background: #F4F2F2 100%;
  border-radius:5rpx;
  text-align: center;
}
.remark{
  position: relative;
  background: #F4F2F2 100%;
  height: 110rpx;
}
.textnormal{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background: white;
  width: 90%;
  margin: auto;
  height: 80%;
  text-align: center;
  border-radius: 35rpx;
  box-shadow: 0.9rpx 0.7rpx 0.8rpx #D8D6D6 100%;
}

.normalhover3{
  display: flex;
  line-height: 50rpx;
  margin: .5rpx;
