  float: left;
  color: gray;
  font-size: 32rpx;
  font-weight: 400;
  width: 27%;
  height: 110rpx;
  background: #dddddd;
  border-radius:5rpx;
  text-align: center;
}
.keyboard{
  position: absolute;
  bottom: 0px;
  height: auto;
  width: 100%;
}
.csk-number-border{
  margin: auto;
  width: 93%;
  height: 92rpx;
  border: 0.5rpx solid;
  justify-content: center;
  border-color: darkgrey;
  border-radius: 32rpx 0rpx 0rpx 32rpx;
  box-shadow: 3rpx 3rpx 3rpx #888888;
}
.csk-type{
  width: 15%;
  float: left;
  height: 100%;
  position: relative;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 32rpx 0rpx 0rpx 32rpx;
  background-color: lightcoral;
  font-size: 34rpx;
  font-weight: 500;
  color:white;
}
.csk-number{
  height: 100%;
  width: 70%;
  float: left;
  position: relative;
  color: gray;
  display: flex;
  align-items: center;
  font-size: 34rpx;
  font-weight: 500;
}
.switch{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  margin-bottom: 30rpx;
}
.switch1{
  position: relative;
  background: linear-gradient(#FDBF9C 75%, #F0887B 100%);
  font-size: 30rpx;
  font-weight: 500;
  width: 100rpx;
  color:white;
  padding: 25rpx;
  border-radius: 48rpx;
  text-align: center;
}
.switch2{
  position: relative;
  background:#FDF2F1 100%;
  font-size: 30rpx;
  font-weight: 500;
