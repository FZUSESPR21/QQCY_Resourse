  font-size: 32rpx;
  font-weight: 400;
  width: 16.5%;
  height: 110rpx;
  background: #FFC8A1 100%;
  align-items: center;
  justify-content: center;
  border-radius:5rpx;
  text-align: center;
}
.normalhover1 ,.normalhover2 ,.normalhover0{
  display: flex;
  align-items: center;
  justify-content: center;
  border: white;
  line-height: 50rpx;
