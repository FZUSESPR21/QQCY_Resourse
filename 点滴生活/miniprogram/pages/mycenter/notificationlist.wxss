
 .tab{
	display: flex;
  flex-direction: column;
}
.tab-nav{
  top:150rpx;
	height: 80rpx;
	background: #fff;
	border-bottom: 0.5rpx dotted #ddd;
	display: flex;
	line-height: 79rpx;
	position: relative;
} 
 
 .tab-line{
   
	position: absolute;
	left: 0;
	bottom: -1rpx;
	height: 4rpx;
	background: #B90000 10000%;
	transition: all 0.3s;
}
.tab-content{
	flex: 1;
	overflow-y: auto;
	overflow-x: hidden;
}  
