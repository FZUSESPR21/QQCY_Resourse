page {
  height: 100vh;
  background: #aaa;
  overflow: hidden;
  position: relative;
}

.poster {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  filter: blur(10px);
  transform: scale(1.2);
  overflow: hidden;
}

.poster .cover {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(255, 255, 255, .6);
}

.poster .bgImg {
  background-size: cover;
  background: linear-gradient(to top left,#CD853F , #f1eff1);
  width: 100%;
  height: 100%;
}


/* 滑动区域 */
swiper,
.swiper,
.swiper-item {
  width: 100%;
  height: 100%;
  text-align: center;
}

.boxItem {
  display: flex;
  text-align: center;
  vertical-align: center;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  margin-top: 40rpx;
  padding: 0rpx 0rpx;
  overflow-wrap: break-word;
  word-wrap: break-word;
  overflow: hidden;
}

